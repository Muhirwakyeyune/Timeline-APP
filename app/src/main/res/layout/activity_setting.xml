<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0CC6D"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="DuplicateIds,ExtraText">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#EA8383"
            android:text="@string/welcome_again"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/eventText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/info"
            android:clickable="true"
            android:ems="10"
            android:inputType="textLongMessage|textPersonName"
            android:text="@string/event"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@id/eventText"
            android:ems="10"
            android:inputType="date"
            android:text="Date:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/dateText"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:clickable="true"
            android:text="ADD EVENT"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/button1"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:clickable="true"
            android:text="UPDATE EVENT"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/button2"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:clickable="true"
            android:text="DELETE EVENT"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/button3"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="20sp"
            android:clickable="true"
            android:text="VEIW EVENTS"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/welcome"
            android:background="#EA8686"
            android:text="Set the events as you want"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>